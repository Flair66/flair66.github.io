{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"$defs": {
		"block": {
			"title": "Block",
			"type": "object",
			"properties": {
				"id": {
					"type": "string"
				},
				"name": {
					"type": "string"
				},
				"blocks": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/block"
					},
					"default": []
				},
				"entries": {
					"type": "array",
					"items": {
						"$ref": "#/$defs/entry"
					},
					"default": []
				}
			},
			"required": [
				"id",
				"name"
			]
		},
		"entry": {
			"title": "Entry",
			"type": "object",
			"properties": {
				"name": {
					"type": "string"
				},
				"glass": {
					"$ref": "#/$defs/glass"
				},
				"size": {
					"type": "string"
				},
				"ingredients": {
					"type": "string"
				},
				"hh": {
					"type": "string"
				},
				"price": {
					"$ref": "#/$defs/price"
				},
				"sizes": {
					"type": "array",
					"items": {
						"type": "object",
						"properties": {
							"size": {
								"type": "string"
							},
							"glass": {
								"$ref": "#/$defs/glass"
							},
							"price": {
								"$ref": "#/$defs/price"
							}
						},
						"required": [
							"size",
							"price"
						]
					},
					"default": []
				}
			},
			"required": [
				"name"
			]
		},
		"glass": {
			"type": "integer",
			"minimum": 1,
			"maximum": 14
		},
		"price": {
			"type": "string",
			"pattern": "^([0-9]|[1-9][0-9]),[0-9][0-9]€( \/ ([0-9]|[1-9][0-9]),[0-9][0-9]€)*$"
		}
	},

	"type": "array",
	"items": {
		"$ref": "#/$defs/block"
	},
	"default": []
}
