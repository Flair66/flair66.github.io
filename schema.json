{
	"$schema": "http://json-schema.org/draft-04/schema#",

	"definitions": {
		"block": {
			"type": "object",
			"title": "Block",
			"headerTemplate": "{{ i1 }} - {{ self.name }} [{{ self.id }}]",
			"format": "grid",
			"properties": {
				"id": {
					"type": "string",
					"title": "Identifier",
					"options": {
						"grid-columns": 6
					}
				},
				"name": {
					"type": "string",
					"title": "Name",
					"options": {
						"grid-columns": 6
					}
				},
				"blocks": {
					"type": "array",
					"title": "Unterblöcke",
					"items": {
						"$ref": "#/definitions/block"
					},
					"options": {
						"disable_collapse": false,
						"collapsed": true
					},
					"default": []
				},
				"entries": {
					"type": "array",
					"title": "Einträge",
					"items": {
						"$ref": "#/definitions/entry"
					},
					"options": {
						"disable_collapse": false,
						"collapsed": true
					},
					"default": []
				}
			},
			"required": [
				"id",
				"name"
			]
		},
		"entry": {
			"type": "object",
			"title": "Entry",
			"headerTemplate": "{{ i1 }} - {{ self.name }}",
			"properties": {
				"name": {
					"type": "string",
					"title": "Name"
				},
				"glass": {
					"$ref": "#/definitions/glass",
					"title": "Glass Icon"
				},
				"size": {
					"type": "string",
					"title": "Detail"
				},
				"ingredients": {
					"type": "string",
					"title": "Beschreibung"
				},
				"hh": {
					"$ref": "#/definitions/price",
					"title": "Happy Hour"
				},
				"price": {
					"$ref": "#/definitions/price",
					"title": "Preis"
				},
				"sizes": {
					"type": "array",
					"format": "table",
					"title": "Größen",
					"items": {
						"type": "object",
						"title": "Size",
						"properties": {
							"size": {
								"type": "string"
							},
							"glass": {
								"$ref": "#/definitions/glass"
							},
							"price": {
								"$ref": "#/definitions/price"
							}
						},
						"required": [
							"size",
							"price"
						]
					},
					"default": []
				}
			},
			"required": [
				"name"
			]
		},
		"glass": {
			"type": "integer",
			"minimum": 1,
			"maximum": 14
		},
		"price": {
			"type": "string",
			"pattern": "^([0-9]|[1-9][0-9]),[0-9][0-9]€( \/ ([0-9]|[1-9][0-9]),[0-9][0-9]€)*$"
		}
	},

	"type": "array",
	"items": {
		"$ref": "#/definitions/block"
	},
	"default": []
}
